---
import Layout from "../layouts/Layout.astro";
import TitleSection from "../sections/TitleSection.astro";
import LatestArticlesSection from "../sections/LatestArticlesSection.astro";
import AboutSection from "../sections/AboutSection.astro";
import CategoriesSection from "../sections/CategoriesSection.astro";
---

<Layout>
  <TitleSection />
  <LatestArticlesSection />
  <AboutSection />
  <CategoriesSection />
</Layout>

<style is:global>
  .subtitle {
    @apply text-cyan-300 font-semibold text-2xl md:text-3xl mb-7;
  }

  .home-section-padding {
    @apply px-4 md:px-5;
  }
</style>
